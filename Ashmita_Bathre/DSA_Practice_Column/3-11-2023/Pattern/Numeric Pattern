CODE:
#include <iostream>
using namespace std;

int main() {
  int size;
  cout<<"Enter the size of the Pattern:";
  cin>>size;

  for (int row=0; row<size; row++)
  {
    for(int col=0; col<size-row;col++)
      {
        cout<<size-col<<" ";
      }
    cout<<endl;
  }
  return 0;
}
