CODE:
#include <iostream>
using namespace std;

int main() {
  int size;
  cout<<"Enter the size of the Pattern:";
  cin>>size;

  for (int row=0; row<size; row++)
  {
    for(int col=0; col<=row;col++)
      {
        cout<<col+1<<" ";
      }
    cout<<endl;
  }
  return 0;
}
