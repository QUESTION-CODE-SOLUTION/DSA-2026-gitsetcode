// Pattern 1

Enter the size of the pattern:6
* 
* * 
* * * 
* * * * 
* * * * * 
* * * * * * 
---------------------------------------
 
CODE:
----------
#include<iostream>
using namespace std;

int main()
{
  int size;
  cout<<"Enter the size of the pattern:";
  cin>>size;

  for(int row=0;row<size;row++)
  {
  for(int col=0;col<=row;col++)
    {
      cout<<"* ";
    }
  cout<<endl;
  }
}

