//method 1
#include<iostream>
#include<string>
using namespace std;
int main(){
 for(int i=5; i>=1; i--)
{
for(int j=5-i; j>=1; j--)
{
cout<<" ";
}
for(int k=i; k>=1; k--)
{
cout<<"*";
}
cout<<endl ; 
}
return 0;
}


outout-
*****
 ****
  ***
   **
    *


//method 2
#include<iostream>
#include<string>
using namespace std;
int main(){
 for(int i=1; i<=5; i++)
{
for(int j=1; j<=i-1; j++)
{
cout<<" ";
}
for(int k=i; k<=5; k++)
{
cout<<"*";
}
cout<<endl ; 
}
return 0;
}


output-
*****
 ****
  ***
   **
    *


//method 3
#include<iostream>
#include<string>
using namespace std;
int main(){
 for(int i=5; i>=1; i--)
{
for(int j=5; j>=1; j--)
{
cout<<" ";
}
for(int k=i; k>=1; k--)
{
cout<<"*";
}
cout<<endl ; 
}
return 0;
}


