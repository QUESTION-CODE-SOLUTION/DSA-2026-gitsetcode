#include <iostream>

int main() {
    int n;
    std::cout << "Enter the maximum number of stars: ";
    std::cin >> n;

    // Print incrementing stars
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            std::cout << "*";
        }
        std::cout << std::endl;
    }

    // Print decrementing stars
    for (int i = n - 1; i >= 1; i--) {
        for (int j = 1; j <= i; j++) {
            std::cout << "*";
        }
        std::cout << std::endl;
    }

    return 0;
}



output-
Enter the maximum number of stars: 5
*
**
***
****
*****
****
***
**
*

