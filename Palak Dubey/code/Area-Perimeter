#include <iostream>
using namespace std;
int main()
{
    int dim1, dim2;
    char choice;
    cout << "Select a Shape \n1. R for Rectangle\n2. S for Square\n3. C for Circle\n4. T for Triangle\n ";
    cout << "Enter a Character: ";
    cin >> choice;
    switch (choice)
    {
    case 'R':
        cout << "Enter length and breadth: ";
        cin >> dim1;
        cin >> dim2;
        cout << "Area of Rectangle is: " << dim1 * dim2 << endl;
        cout << "perimeter of Rectangle is: " << 2 * (dim1 + dim2) << endl;
        break;
    case 'S':
        cout << "Enter length: ";
        cin >> dim1;
        cout << "Area of Square is: " << dim1 * dim1 << endl;
        cout << "perimeter of Square is: " << 4 * dim1 << endl;
        break;
    case 'C':
        cout << "Enter radius: ";
        cin >> dim1;
        cout << "Area of Circle is: " << 3.14 * dim1 * dim1 << endl;
        cout << "perimeter of Circle is: " << 2 * 3.14 * dim1 << endl;
        break;
    case 'T':
        cout << "Enter base and height: ";
        cin >> dim1;
        cin >> dim2;
        int a, b, c;
        cout << "Enter other two sides: ";
        cin >> a;
        cin >> b;
        c = dim1;
        cout << "Area of Triangle is: " << 0.5 * dim1 * dim2 << endl;
        cout << "perimeter of Triangle is: " << a + b + c << endl;
        break;
    default:
        cout << "Invalid choice";
        break;
    }
    return 0;
}


output=
Select a Shape
1. R for Rectangle
2. S for Square
3. C for Circle
4. T for Triangle
 Enter a Character: R
Enter length and breadth: 12
20
Area of Rectangle is: 240
perimeter of Rectangle is: 64
