#include<iostream>
using namespace std;
int main(){
    int num;
    cout<<"Enter a number: ";
    cin>>num;
    if(num%2==0)
    cout<<num<<" is divisible by 2"<<endl;
    if(num%3==0)
    cout<<num<<" is divisible by 3"<<endl;
       // 6 is divisible by both 2 and 3 and output will be "6 is divisible by 2" and as "6 is divisible by 3" as second "if" statement will always be executed whether first "if" statement is true or false.
    else
    cout<<num<<" is divisible by numbers other than 2 and 3"<<endl;
    return 0;
}
