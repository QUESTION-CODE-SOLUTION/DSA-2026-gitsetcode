#include <iostream>
using namespace std;
int main()
{
    int num1=0,num2=0;
    char choice;
    cout<<" CALCULATOR";
        cout<<"\n Enter first num: ";
        cin>>num1;
        cout<<"\n Enter second num: ";
        cin>>num2;

        cout<<"\nEnter your choice :\n1. +\n2. -\n3. *\n4. /\n";
        cin>>choice;
        switch(choice){
        case '+':cout<<"\nThe addition of "<<num1<<" and "<<num2<<" is: "<<num1+num2<<"\n";break;
        case '-':cout<<"\nThe subtraction of "<<num1<<" and "<<num2<<" is: "<<num1-num2<<"\n";break;
        case '*':cout<<"\nThe multiplication of "<<num1<<" and "<<num2<<" is: "<<num1*num2<<"\n";break;
        case '/':cout<<"\nThe division of "<<num1<<" and "<<num2<<" is: "<<num1/num2<<"\n";break;
        default: cout<<"wrong choice\n";break;}
    return 0;
}
