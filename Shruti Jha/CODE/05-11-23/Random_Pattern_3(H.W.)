#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter a number: ";
    cin>>n;
    for(int i=0;i<2*n+1;i++){
        cout<<"*";
    }
    cout<<endl;
    for(int i=0;i<n;i++){
        for(int j=i;j<n;j++){
            cout<<"*";
        }
        for(int j=5-(2*i+1);j<5;j++){
            cout<<" ";
        }
        for(int j=i;j<n;j++){
            cout<<"*";
        }
        cout<<endl;
    }
}



#include<iostream>
#include<vector>
using namespace std;
int main(){
    for(int i=0;i<5;i++){
        for(int j=-4;j<=4;j++){
            if(j>-i&&j<i){
                cout<<" ";
            }
            else cout<<"*";
        }
        cout<<endl;
    }
   return 0;
}




