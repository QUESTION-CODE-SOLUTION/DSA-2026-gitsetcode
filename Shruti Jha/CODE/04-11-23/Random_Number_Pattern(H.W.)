#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter a number: ";
    cin>>n;
    for(int i=0;i<n;i++){
        for(int j=0;j<i+1;j++){
            if(i%2==0 && j%2==0 || i%2!=0 && j%2!=0 ){
                cout<<"1";
            }
            else{
                cout<<"0";
            }
        }
        cout<<endl;
    }
}


// Enter a number: 5
// 1
// 01
// 101
// 0101
// 10101
