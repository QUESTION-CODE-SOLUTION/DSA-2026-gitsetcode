#include <iostream>
using namespace std;
int main()
{
	float sum=0,avg=0;
    int arr[4],n;
    n = sizeof(arr) / sizeof(arr[0]);
    cout << "Enter elements of array: " ;
    for(int i=0;i<4;i++){
        cin>> arr[i] ;
        sum+=arr[i];
    }
    avg=sum/n;
    cout << "Sum of all elements of array is: "<<sum<<endl;
    cout << "Average of all elements of array is: "<<avg;
	return 0;
}
