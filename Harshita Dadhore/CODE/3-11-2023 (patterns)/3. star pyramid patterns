1.first type 
* * * * * 
* * * * 
* * * 
* * 
* 

#include <iostream>
using namespace std;   
int main() {
    for(int i=5;i>=1;i--){
       for(int j=1;j<=i;j++){
             cout<<"* ";
       } 
       cout<<endl;
    }
    return 0;
}



------------------------------------------------------------------------------------------------------------------------------------------

// 2. second type
//        * 
//       * * 
//     * * * 
//   * * * * 
// * * * * *


#include <iostream>
using namespace std;
int main()
{
	for (int i = 5; i >=1; i--) {
		for (int j = 1; j <= 5; j++) 
		{
			if (j >= i) {
				cout << "* ";
			}
			else {
				cout << " ";
			}
		}
		cout << endl;
	}
	return 0;
}


------------------------------------------------------------------------------------------------------------------------------------------
//3. third pattern
//* 
//* * 
//* * * 
//* * * * 
//* * * * *

#include <iostream>
using namespace std;   
int main() {
    for(int i=1;i<=5;i++){
       for(int j=1;j<=i;j++){
             cout<<"* ";
       } 
       cout<<endl;
    }
    return 0;
}

------------------------------------------------------------------------------------------------------------------------------------------
//4.fourth pattern
//* * * * * 
//* * * * 
// * * * 
//  * * 
//   *

#include <iostream>
using namespace std;
int main()
{
	for (int i =5; i>=1; i--) {
		for (int j=5-i; j>=1; j--) 
		{
	    	cout << " " ;
			}
			for (int k=i;k>=1;k--){
				cout << "* ";
			}
		
		cout << endl;
	}
	return 0;
}

