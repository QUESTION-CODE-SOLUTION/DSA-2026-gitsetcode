1. number pyramid
//       1 
//       0 1 
//       1 0 1 
//       0 1 0 1 
//       1 0 1 0 1 


#include <iostream>
using namespace std;   
int main() {
    for(int i=1;i<=5;i++){
       for(int j=1;j<=i;j++){
         if(i%2==0 && j%2==0 || i%2!=0 && j%2!=0  ){
             cout<<"1 ";
         }
         else{
             cout<<"0 ";
         }
       } 
       cout<<endl;
    }

    return 0;
}

------------------------------------------------------------------------------------------------------------------------------------------

2. second number pyramid

//     1 2 3 4 5 
//     1 2 3 4 
//     1 2 3 
//     1 2 
//     1 

#include <iostream>
using namespace std;   
int main() {
    for(int i=5;i>=1;i--){
       for(int j=1;j<=i;j++){
             cout<<j<<" ";
       } 
       cout<<endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------------
3. third type
//5 5 5 5 5 
//4 4 4 4 
//3 3 3 
//2 2 
//1 

#include <iostream>
using namespace std;   
int main() {
    for(int i=5;i>=1;i--){
       for(int j=1;j<=i;j++){
             cout<<i<<" ";
       } 
       cout<<endl;
    }
    return 0;
}

