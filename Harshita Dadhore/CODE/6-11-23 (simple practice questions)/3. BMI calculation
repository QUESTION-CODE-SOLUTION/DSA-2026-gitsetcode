#include <iostream> 
#include <math.h> 
using namespace std; 
int main(){
  float change_height;
  cout<<"Enter height of the person in foot:";
  cin>>change_height;
  float height=change_height*0.3048;
  cout<<"height of a person in meter:"<<height<<endl;
  float weight;
  cout<<"Enter weight of the person in kilograms:";
  cin>>weight;



    float bmi = weight / pow(height, 2); 
    cout<<"BMI the a person is :"<<bmi<<endl; 

     if (bmi < 18.5)  {
        cout << "underweight"; 
    }

    else if (bmi >= 18.5 && bmi < 24.9)  {
        cout << "Healthy"; 
     }

    else if (bmi >= 24.9 && bmi < 30) {
        cout << "overweight"; 
    }

    else if (bmi >= 30 ) {
        cout << "Suffering from Obesity"<<endl;
       cout<<"Advice- Do yoga daily";
     }

    return 0; 
} 
