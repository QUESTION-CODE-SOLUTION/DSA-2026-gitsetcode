#include <iostream>

using namespace std;

int main() {
    int num;
    cout<<"Enter any positive number:";
    cin>>num;
    int half=num/2;
    for( int i=2;i<=half ;i++){
        if (num%i!=0){
          
                  cout<<"The number is not a prime number"<<endl;
          break;
        }
        else{
                 cout<<"The number is prime number";
             }
          }
   return 0;
  }
