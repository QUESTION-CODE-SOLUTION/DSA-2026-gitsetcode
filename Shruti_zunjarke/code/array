// intialization and iteration over array
#include<iostream>
using namespace std;
int main(){
    int arr[5];
    arr[0]=23;
    arr[1]=34;
    arr[2]=22;
    arr[3]=26;
    arr[4]=29;
    for(int i=0;i<5;i++){
        cout<<i<<" "<<arr[i]<<endl;
    }
return 0;
}

//calculation of size of array
#include<iostream>
using namespace std;
int main(){
    int arr[5]={'a','e','i','o','u'};
    cout<<sizeof(arr)<<" its sizeof(arr) \n";
    cout<<sizeof(arr[0])<<" its sizeof(arr[0]) \n";
    cout<<sizeof(arr)/sizeof(arr[0])<<" sizeof(arr)/sizeof(arr[0])";
    return 0;
}

//memory allocation
int arr[5]={1,4,5,6,8};
    cout<<arr<<endl;
    cout<<arr+5<<endl;
    cout<<arr+12<<endl;

//use of pointer
#include<iostream>
using namespace std;
int main(){
int arr[5]={1,4,5,6,8};
    int *ptr=arr;
    cout<<ptr<<endl;
    cout<<arr<<endl;
    cout<<(ptr+1)<<" ";
    cout<<(ptr+2)<<" ";
    return 0;
}
