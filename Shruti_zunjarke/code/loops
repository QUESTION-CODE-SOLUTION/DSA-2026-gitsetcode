/*
* * * * * 
* * * * 
* * * 
* * 
* 
*/
#include<iostream>
using namespace std;
 int main()
 {
    for(int i=5;i>=1;i--){
        for(int j=1;j<=i;j++){   //for(int j=i;j>=1;j--)  both are same 
            cout<<"* ";
        }
        cout<<endl;
    }
    return 0;
}

