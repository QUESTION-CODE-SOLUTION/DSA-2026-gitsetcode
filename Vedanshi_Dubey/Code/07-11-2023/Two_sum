#include<iostream>
using namespace std;
int main(){
    int arr[6];
    cout<<"Enter elements of array :"<<endl;
    for(int i=0;i<5;i++){
        cin>>arr[i];
    }
    cout<<"Array elements :"<<" ";
     for(int i=0;i<5;i++){
        cout<<arr[i]<<" ";
    }
    cout<<endl;
    int sum=0;
    int target,i;
    cout<<"Enter target value :"<<endl;
    cin>>target;
    for(int i=0;i<5;i++){
        if(arr[i]+arr[i+1]==target){
            cout<< i<<" ,"<<i+1;
            break;
        }
    }
    
    return 0;
}

