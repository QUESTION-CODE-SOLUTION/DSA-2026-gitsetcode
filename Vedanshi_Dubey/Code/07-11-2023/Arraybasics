//Array basics

#include<iostream>
using namespace std;
int main(){
    int arr[5]={1,2,3,4,5};
    cout<<arr[0]<<" ";
    cout<<arr[1]<<" ";
    cout<<arr[2]<<" ";
    cout<<arr[3]<<" ";
    cout<<arr[4]<<" "<<endl;


    cout<<"Number printing through loop :";
    for(int i=0;i<5;i++){
        cout<<arr[i]<<" ";
    }

    cout<<endl;
    cout<<"Size of array :"<<sizeof(arr)<<endl;
    cout<<sizeof(arr[0])<<endl;
    cout<<sizeof(arr[1])<<endl;
    cout<<sizeof(arr[2])<<endl;
    cout<<sizeof(arr[3])<<endl;
    cout<<sizeof(arr[4])<<endl;

    //no. of elements
    cout<<sizeof(arr)/sizeof(arr[0])<<endl;

    cout<< "Address of first element of array :"<<arr<<endl;
    cout<<arr+1<<" ";

    //pointers - variable containing address of another variable
    int *ptr=arr;  //address of first element of array is stored in ptr
    cout<<ptr<<" ";
    cout<<*ptr<<" ";
    cout<<ptr+1<<" ";
}
