
#include <iostream> 
#include <math.h> 
using namespace std; 
int main() 
{ 
	float height ; 
	float weight; 
    cout<<"Enter your weight(in kg) :";
	cin>>weight;
     cout<<"Enter your height(in metres) :";
	cin>>height;
	float bmi = weight / pow(height, 2); 
	cout << "The BMI is "<< bmi<<endl; 
	
	if (bmi < 18.5) 
    {
		cout << "underweight"; 
    }
	else if (bmi >= 18.5 && bmi < 24.9) {
		cout << "Healthy"; 
    }
	else if (bmi >= 24.9 && bmi < 30){
		cout << "overweight"; 
     }
	else if (bmi >= 30) 
    {
		cout << "Suffering from Obesity"; 
    }
	return 0; 
} 

// Enter your weight(in kg) :45
// Enter your height(in metres) :1.24
// The BMI is 29.2664
// overweight
