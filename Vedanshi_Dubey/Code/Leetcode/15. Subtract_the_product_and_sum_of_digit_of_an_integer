class Solution {
public:
    int subtractProductAndSum(int n) {
        int rem;
        int p=1,s=0;
        int temp1=n;
         int temp2=n;
        while(temp1!=0){
         rem=temp1%10;
        p=p*rem;
        temp1=temp1/10;
        }
          while(temp2!=0){
         rem=temp2%10;
        s=s+rem;
        temp2=temp2/10;
        }
        
            return p-s;
      
    }
};
