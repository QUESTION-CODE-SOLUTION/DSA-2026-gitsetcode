#include<iostream>
using namespace std;
int main(){
    int n,i,j;
    cout<<"Enter a number: ";
    cin>>n;
    for(i=1;i<=n;i++){
        for(j=1;j<=i;j++){
            cout<<"*" <<" ";
        }
        cout<<endl;
    }
}

// * 
// * *
// * * *
// * * * *
// * * * * *
                 // Reverse of above pattern
#include<iostream>
using namespace std;
int main(){
    int n,i,j;
    cout<<"Enter a number: ";
    cin>>n;
    for(i=n;i>=1;i--){
        for(j=1;j<=i;j++){
            cout<<"*"<<" ";
        }
        cout<<endl;
    }
}
// Enter a number: 6
// * * * * * * 
// * * * * *   
// * * * *     
// * * * 
// * * 
// * 
