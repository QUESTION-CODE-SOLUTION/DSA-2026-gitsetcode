#include<iostream>
using namespace std;
int main(){
    int n,i,j;
    cout<<"Enter a number: ";
    cin>>n;
    for(i=n;i>=1;i--){
        for(j=n-i;j>=1;j--){
            cout<<"  ";
        }
        for(int k=i ;k>=1;k--){
            cout<<"* ";
        }
        cout<<endl;
    }
}
// Enter a number: 6
// * * * * * * 
//   * * * * * 
//     * * * *
//       * * *
//         * *
//           *
