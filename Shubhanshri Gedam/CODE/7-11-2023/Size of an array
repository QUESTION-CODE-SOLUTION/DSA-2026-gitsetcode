#include <iostream> 
using namespace std; 

int main() 
{ 
    int arr[] = { 5, 10, 15, 20, 25 }; 

    
    cout << "Size of arr[0]: " << sizeof(arr[0]) << endl;  

    
    int n = sizeof(arr) / sizeof(arr[0]); 

    cout << "Length of an array: " << n << endl; 

    return 0; 
}


//Size of arr[0]: 4
//Length of an array: 5
