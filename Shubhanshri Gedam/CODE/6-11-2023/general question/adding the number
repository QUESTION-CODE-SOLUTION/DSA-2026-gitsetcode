#include<math.h>
using namespace std;  

int main(){
  int n,m,sum=0;
  cout<<"Enter a number:";
  cin>>n;

  while(n>0){
    m=n%10;
    sum=sum+m;
    n=n/10;
    }
    
  cout<<"sum of the digits is:"<<sum<<endl;
  if (n%2==0){
    cout<<"sum of the digits is EVEN"<<endl;
  } else{
    cout<<"sum of the digits is ODD"<<endl;
  }

  
  return 0;
}

//Enter a number:35
//sum of the digits is:8
//sum of the digits is EVEN
